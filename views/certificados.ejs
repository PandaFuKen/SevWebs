<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="css/navbar.css">
    <title>Certificados</title>
</head>
<body>
  <%- include('sidebar.ejs') %>
<div class="container-user" ud="container-user">
  <h2>Certificados</h2>
  <div class="card-container">
    <% documentos.forEach(function(doc) { %>
      <div class="card">
        <div class="card-title"><%= doc.nombre %></div>
        <div class="card-text"><%= doc.descripcion %></div>
        <div class="card-text"><b>Fecha:</b> <%= doc.fecha.toISOString().slice(0,10) %></div>
        <div class="card-btns">
          <button class="card-btn view" onclick="verPDF('/documento/ver/<%= doc.id_documento %>')">Ver</button>
          <a href="/documento/descargar/<%= doc.id_documento %>" class="card-btn download">Descargar</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<!-- Modal PDF -->
<div id="pdfModal" class="pdf-modal">
  <div class="pdf-modal-content">
    <div class="pdf-modal-header">
      <button class="pdf-close" onclick="cerrarPDF()" title="Cerrar">
        <i class="fa fa-times"></i>
      </button>
    </div>
    <iframe id="pdfFrame" src="" frameborder="0"></iframe>
  </div>
</div>

<style>
.pdf-modal {
  display: none;
  position: fixed;
  z-index: 2000;
  left: 0; top: 0;
  width: 100vw; height: 100vh;
  background: rgba(0,0,0,0.7);
  justify-content: center;
  align-items: center;
}
.pdf-modal-content {
  position: relative;
  width: 80vw;
  height: 90vh;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.25);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.pdf-modal-header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: #f5f5f5;
  padding: 8px 16px;
  border-radius: 10px 10px 0 0;
  gap: 10px;
}
.pdf-close, .pdf-download {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #333;
  cursor: pointer;
  outline: none;
  transition: color 0.2s;
}
.pdf-close:hover, .pdf-download:hover {
  color: #007bff;
}
#pdfFrame {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 0 0 10px 10px;
  flex: 1;
}
</style>

<script src="js/sidebar.js"></script>

<script>
function verPDF(url) {
  document.getElementById('pdfFrame').src = url;
  document.getElementById('pdfModal').style.display = 'flex';
  document.getElementById('pdfDownloadBtn').href = url.replace('/ver/', '/descargar/');
}
function cerrarPDF() {
  document.getElementById('pdfFrame').src = '';
  document.getElementById('pdfModal').style.display = 'none';
  document.getElementById('pdfDownloadBtn').href = '#';
}
</script>
</body>
</html>